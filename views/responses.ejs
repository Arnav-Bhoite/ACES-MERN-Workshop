<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ACES RMDSSOE | Responses</title>
    <link
      rel="icon"
      type="image/x-icon"
      href="https://res.cloudinary.com/dygc8r0pv/image/upload/v1734452807/favicon_tjmufj.ico"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-light">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/">ACES MERN Workshop 1.0</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
            <li class="nav-item">
              <a class="nav-link active" href="/responses">Responses</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container py-5">
      <div class="card shadow-sm">
        <div class="card-header text-center bg-success text-white">
          <h3>All Responses</h3>
        </div>
        <div class="card-body">
          <ul class="list-group">
            <% responses.forEach(function(response) { %>
            <li class="list-group-item">
              <h4><%= response.name %></h4>
              <strong><p><%= response.class %></p></strong>
              <p><%= response.message %></p>
            </li>
            <% }); %>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>
